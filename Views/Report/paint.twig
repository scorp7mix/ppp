{% extends 'layout.twig' %}

{% block view %}

<h1>Остатки по краскам:</h1>
<br>
<div class="panel-group" id="report-paint-accordion" role="tablist" aria-multiselectable="true">
    {% for paint in paints %}
        {% if paint.rows %}
            <div class="panel panel-default">
                <div class="panel-heading" role="tab" id="heading{{ paint.id }}">
                    <h3 class="panel-title">
                        <a role="button"
                           data-toggle="collapse"
                           data-parent="#report-paint-accordion"
                           href="#collapse{{ paint.id }}"
                           aria-expanded="true"
                           aria-controls="collapse{{ paint.id }}">
                            {{ paint.name }}
                        </a>
                    </h3>
                </div>
                <div id="collapse{{ paint.id }}"
                     class="panel-collapse collapse"
                     role="tabpanel"
                     aria-labelledby="heading{{ paint.id }}">
                    <div class="panel-body">
                        <table class="table table-bordered">
                            <thead>
                            <tr>
                                <th>Склад</th>
                                <th>Расход</th>
                                <th>Приход</th>
                                <th>Остаток</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for row in paint.rows %}
                                <tr>
                                    <td>{{ row.stock }}</td>
                                    <td>{{ row.qty_from }}</td>
                                    <td>{{ row.qty_to }}</td>
                                    <td>{{ row.qty_res }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endfor %}
</div>

{% endblock %}
