{% extends 'layout.twig' %}

{% block view %}
<h1>Редактирование места хранения #{{ place.id }}:</h1>
<br>
<form action="#" method="post">
    <div class="form-group">
        <label for="id-name">Наименование</label>
        <input type="text" name="name" id="id-name" value="{{ place.name }}">
    </div>
    <div class="form-group">
        <label for="id-id_warehouse">Склад</label>
        <select name="id_warehouse" id="id-id_warehouse">
            <option></option>
            <option value="1" {% if place.id_warehouse == '1' %}selected{% endif %}>основной склад</option>
            <option value="2" {% if place.id_warehouse == '2' %}selected{% endif %}>склад в цеху</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
</form>
{% endblock %}
