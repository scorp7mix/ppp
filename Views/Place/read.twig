{% extends 'layout.twig' %}

{% block view %}
<h1>Перечень мест хранения:</h1>
<br>
<a href="/place/create">Добавить новое место хранения</a>
<br>
<br>
<table class="table table-bordered">
    <thead>
    <tr>
        <th>#</th>
        <th>Наименование</th>
        <th>Склад</th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% for place in places %}
    <tr>
        <td>{{ place.id }}</td>
        <td>{{ place.name }}</td>
        <td>{{ place.warehouse_name }}</td>
        <td><a href="/place/update/{{ place.id }}"><i class="glyphicon glyphicon-pencil"></i></a></td>
        <td><a href="/place/delete/{{ place.id }}"><i class="glyphicon glyphicon-remove"></i></a></td>
    </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
