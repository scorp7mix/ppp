{% extends 'layout.twig' %}

{% block view %}
<h1>Редактирование партии #{{ consignment.id }}:</h1>
<br>
<form action="#" method="post">
    <div class="form-group">
        <label for="id-name">Наименование</label>
        <input type="text" name="name" id="id-name" value="{{ consignment.name }}">
    </div>
    <div class="form-group">
        <label for="id-id_paint">Краска</label>
        <select name="id_paint" id="id-id_paint">
            <option></option>
            {% for paint in paints %}
            <option value={{ paint.id }} {% if paint.id == consignment.id_paint %}selected{% endif %}>
                {{ paint.name }}
            </option>
            {% endfor %}
        </select>
    </div>
    <div class="form-group">
        <label for="id-date_of_end">Срок годности</label>
        <input type="date" name="date_of_end" id="id-date_of_end" value="{{ consignment.date_of_end }}">
    </div>
    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
</form>
{% endblock %}
